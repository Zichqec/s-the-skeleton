	if reference0 == "artificial" //If the user cancels the update by double clicking the balloon
	{
		if !AngryIsPopped; "%(angry)FINE, I GUESS YOU DON'T WANT TO SEE WHAT'S NEW.\w8%(angryoff) "
		else; PoppedDialogue("Angry")
	}
	else
	{
		if !AreThesePopped("")
		{
			if !ScaredIsPopped; "%(scared)O-oh no!\w8 It failed!\w8 Uhhh...\w8 I have to...\w8 Explain...\w8%(scaredoff) "
			else; PoppedDialogue("Scared")
			--
			if !ShyIsPopped; "%(shy)Um,\w4 it-\w4 the update failed...\w8%(shyoff) "
			else; PoppedDialogue("Shy")
			--
			if !AngryIsPopped; "%(angry)IT'S NOT MY FAULT.\w8%(angryoff) "
			else; PoppedDialogue("Angry")
			--
			if reference0 == "timeout" //If it timed out
			{
				if !ThinkIsPopped; "%(think)Looks like the connection timed out.\w8%(thinkoff) "
				else
				{
					PoppedDialogue("Think")
					--
					"(Connection timed out.)"
				}
			}
			elseif reference0 == "md5 miss" //If the update files have not been uploaded correctly and don't match the updates2.dau
			{
				_file = SPLITPATH(reference1)[2] + SPLITPATH(reference1)[3] //This gets the name and extension of the offending file
				if !AngryIsPopped; "%(angry)TELL ZICHQEC THERE'S AN MD5 ERROR AND IT NEEDS FIXED RIGHT AWAY!\w8%(angryoff) "
				else
				{
					PoppedDialogue("Angry")
					--
					"(MD5 error on file \_?%(_file)\_?.)"
				}
			}
			else //Any other errors
			{
				if !ConfusedIsPopped; "%(confused)I'm not sure?? What went wrong??? It just says '%(reference0)'...\w8%(confusedoff) "
				else
				{
					PoppedDialogue("Confused")
					--
					"(Error %(reference0))"
				}
			}
		}
	}
}

