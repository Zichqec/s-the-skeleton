//Finished installing something ghost related. You can remove any of the ifs here if you like, and just have it go to the else.
//reference0 is the type of installed item, reference1 is the name.
OnInstallComplete
{
	/*
	
	Done with the installation!! 
		Looks like it's a %(reference0)? 
			Ghost: Yay!! New friend new friend!!
			
			Shell: A n-new look...?
			
			Plugin: Fascinating...
			
			Calendar Skin/rss/headline: cool, or whatever
			
			Other: Whatever that is???
	
	*/
	
	
	if !AreThesePopped("Happy","Think")
	{
		if !HappyIsPopped; "%(happy)Done with the installation!!\w8%(happyoff) "
		else; PoppedDialogue("Happy")
		--
		_a = "a"
		_x = ""
		if reference0 == "rss"; {_a = "an"; _x = " feed"}
		elseif reference0 == "language"; _x = " pack"
		if !ThinkIsPopped; "%(think)Hmm,\w4 looks like it's %(_a) %(reference0)%(_x)?\w8%(thinkoff) "
		else; PoppedDialogue("Think")
		--
		if reference0 == "ghost"
		{
			if !HappyIsPopped; "%(happy)Yay!!\w8 New friend new friend!!\w8%(happyoff)"
			else; PoppedDialogue("Happy")
		}
		elseif reference0 == "shell"
		{
			if !ShyIsPopped; "%(shy)A n-new look...?\w8%(shyoff)"
			else; PoppedDialogue("Shy")
		}
		elseif reference0 == "balloon"
		{
			if !AngryIsPopped; "%(angry)WHY DO YOU NEED ANOTHER BALLOON!?\w8 YOU HAVE US!!\w8%(angryoff)"
			else; PoppedDialogue("Angry")
		}
		elseif reference0 == "plugin" || reference0 == "language"
		{
			if !ThinkIsPopped; "%(think)Fascinating...\w8%(thinkoff) "
			else; PoppedDialogue("Think")
		}
		elseif reference0 == "calendar skin" || reference0 == "headline" || reference0 == "rss"
		{
			if !UnamusedIsPopped; "%(unamused)cool, or whatever\w8%(unamusedoff)"
			else; PoppedDialogue("Unamused")
		}
		else //Even if you get rid of some of the ifs above, you should keep this else as a catch-all.
		{
			if !ConfusedIsPopped; "%(confused)Whatever that is???\w8%(confusedoff)"
			else; PoppedDialogue("Confused")
		}
	}
	else
	{
		AllPoppedDialogue
		--
		"(Looks like it's finished installing the %(reference0).)"
	}
	--
	if reference0 == "ghost"
	{
		all:/
		{
			"\n\n\_q"
			"\![*]\q[Call %(reference1),CallGhost]\n"
			"\![*]\q[Change to %(reference1),ChangeToGhost]\n\n"
			"\![*]\q[No thanks,cancelnodialogue]\e"
		}
	}
	--
	"\e"
	
	
}

