//When you drop a file on the ghost that isn't something it can install
//reference0 is the file path, which is split up amongst the local variables below
OnFileDrop2
{
	_filepath = SPLITPATH(reference0)
	_filename = _filepath[2]
	_fileext = TOLOWER(_filepath[3])
	case _fileext
	{
		when ".jpg", ".jpeg", ".bmp", ".png" //These are pictures that they can set to wallpapers. Png works for me, but if it doesn't work for you let us know please, I'm curious about this.
		{
			_file = REPLACE(reference0,"]","\]")
			
			
			//O-oh... An image..?
			//Huh? An image???
			//Aah! What's this..? Oh... Oh, it's an image... I guess I should offer...
			
			//Would you want this set as your wallpaper?
			//WHAT, YOU WANT THIS AS YOUR WALLPAPER?
			
			
			//I can set it up any way you like!
			//i guess i can set it for you, or whatever
			
			if !AreThesePopped("Shy","Unamused","Scared","Confused","Happy","Angry","Think")
			{
				if !ShyIsPopped; "%(shy)O-oh...\w8 An image..?\w8%(shyoff) "
				else; PoppedDialogue("Shy")
				
				if !ConfusedIsPopped; "%(confused)Huh?\w8 An image???\w8%(confusedoff) "
				else; PoppedDialogue("Confused")
				
				if !ScaredIsPopped; "%(scared)Aah!\w8 What's this..?\w8 Oh...\w8 Oh,\w4 it's an image...\w8 I guess I should offer...\w8%(scaredoff) "
				else; PoppedDialogue("Scared")
				--
				if !ThinkIsPopped; "%(think)Would you want this set as your wallpaper?\w8%(thinkoff) "
				else; PoppedDialogue("Think")
				
				if !AngryIsPopped; "%(angry)WHAT,\w4 YOU WANT THIS AS YOUR WALLPAPER?\w8%(angryoff) "
				else; PoppedDialogue("Angry")
				--
				if !HappyIsPopped; "%(happy)I can set it up any way you like!\w8%(happyoff)"
				else; PoppedDialogue("Happy")
				
				if !UnamusedIsPopped; "%(unamused)i guess i can set it for you, or whatever\w8%(unamusedoff)"
				else; PoppedDialogue("Unamused")
			}
			else
			{
				AllPoppedDialogue
				--
				"\n\n(How should the wallpaper be set?)"
			}
			--
			all:/
			{
				"\n\n\_q"
				"\![*]\q[Centered,OnWallpaper,%(_file),center]  "
				"\![*]\q[Tiled,OnWallpaper,%(_file),tile]  "
				"\![*]\q[Stretched,OnWallpaper,%(_file),stretch]"
				if "Windows 7" || "Windows 10" _in_ NotifyOS //These are the 'fit' and 'fill' options available from win 7 on. NotifyOS is set just below, to check what OS you're on
				{
					"\n\![*]\q[Fill,OnWallpaper,%(_file),stretch-x]"
					"  \![*]\q[Fit,OnWallpaper,%(_file),stretch-y]"
				}
				if "Windows 10" _in_ NotifyOS; "  \![*]\q[Spanned,OnWallpaper,%(_file),span]" //Same as above, but for the span option since that's win10 and above
				
				"\n\n\![*]\q[No thanks,WallpaperCancel]\e"
			}
		}
		when ".mid", ".wav", ".mp3", ".wma", ".au", ".ogg", ".flac", ".m4a"
		{
			if !AreThesePopped("Shy","Unamused","Sad","Confused","Happy","Angry","Think")
			{
				 if !HappyIsPopped; "%(happy)Oh!\w8 This is music!!\w8%(happyoff) "
				else; PoppedDialogue("Happy")
				
				if !ConfusedIsPopped; "%(confused)Oh??\w8 Is this music???\w8%(confusedoff) "
				else; PoppedDialogue("Confused")
				--
				if !AngryIsPopped; "%(angry)I CAN'T PLAY MUSIC FILES!\w8%(angryoff) "
				else; PoppedDialogue("Angry")
				
				if !ShyIsPopped; "%(shy)Um,\w4 I c-can't...\w8 Can't play music...\w8%(shyoff) "
				else; PoppedDialogue("Shy")
				
				if !UnamusedIsPopped; "%(unamused)yeah,\w4 i can't play this,\w4 sorry.\w8%(unamusedoff) "
				else; PoppedDialogue("Unamused")
				--
				if !SadIsPopped; "%(sad)...maybe someone else could...\w8%(sadoff)"
				else; PoppedDialogue("Sad")
				
				if !ThinkIsPopped; "%(think)Perhaps someone else would be more suited...\w8%(thinkoff)"
				else; PoppedDialogue("Think")
			}
			else; AllPoppedDialogue
		}
		others
		{
			/*
			
			Huh? What's this thing???
			what even is this
			Hmm, %(_filename)%(_fileext)...? Interesting...
			...dunno what this is, sorry...
			Oh!! This is neat!! Whatever it is!!
			I DON'T WANT THIS.
			O-oh, um... Thanks...?
			...Um, what do I say, what even is a %(_filename)%(_fileext)... (It continues muttering. Seems it's not sure what to make of that file.)
			
			
			*/
			nonoverlap:/
			{
				if !ShyIsPopped; "%(shy)O-oh,\w4 um...\w8 Thanks..?\w8%(shyoff)"
				
				if !UnamusedIsPopped; "%(unamused)what even is this\w8%(unamusedoff)"
				
				if !ScaredIsPopped
				{
					"%(scared)...Um,\w4 what do I say,\w4 what even is a "
					--
					if _fileext == ""; "\_?%(_filepath[1])\_?"
					else; "%(_filename)%(_fileext)"
					--
					"...\w8\w8%(narrator)\n\n(It continues muttering.\w8 Seems it's not sure what to make of that file.)\w8%(scaredoff)"
				}
				
				if !SadIsPopped; "%(sad)...dunno what this is,\w4 sorry...\w8%(sadoff)"
				
				if !ConfusedIsPopped; "%(confused)Huh? What's this thing???\w8%(confusedoff)"
				
				if !HappyIsPopped; "%(happy)Oh!!\w8 This is neat!!\w8 Whatever it is!!\w8%(happyoff)"
				
				if !AngryIsPopped; "%(angry)I DON'T WANT THIS.\w8%(angryoff)"
				
				if !ThinkIsPopped
				{
					"%(think)Hmm,\w4 "
					--
					if _fileext == ""; "\_?%(_filepath[1])\_?"
					else; "%(_filename)%(_fileext)"
					--
					"...?\w8 Interesting...\w8%(thinkoff)"
				}
			}
			--
			"\e"
		}
	}		
}

