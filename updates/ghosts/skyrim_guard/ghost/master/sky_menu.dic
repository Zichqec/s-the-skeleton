OpenSakuraMenu
{
	"\0\b2%(idle)"
	--
	"Citizen."
	"What do you need?"
	"Trouble?"
	"What is it?"
	"Everything alright?"
	"What is it? Dragons?"
	"Need something?"
	if race != "Altmer" && race != "Bosmer" && race != "Dunmer" && race != "Nord"
	{
		"What is it %(race)?"
	}
	if race == "Nord"
	{
		"How can I help a brother nord?"
	}
	if race == "Khajiit"
	{
		"What do you want,\w4 cat?"
	}
	if race == "Altmer" || race == "Bosmer" || race == "Dunmer"
	{
		"What is it elf?"
	}
	--
	MenuRun
}

