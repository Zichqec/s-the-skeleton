GetWeekDay
{
	if weekday == 0
	{"Sundas"}
	elseif weekday == 1
	{"Morndas"}
	elseif weekday == 2
	{"Tirdas"}
	elseif weekday == 3
	{"Middas"}
	elseif weekday == 4
	{"Turdas"}
	elseif weekday == 5
	{"Fredas"}
	else
	{"Loredas"}
}

GetAP
{
 	if hour >= 0 && hour <= 11
 		{
 			"AM"
 		}
 	else
 		{
 			"PM"
 		}
}

Getnowmin
{
	if minute >= 0 && minute <=9
	{
		"0%(minute)"
	}
	else
	{
		"%(minute)"
	}
}

Getnowhour
{
	if hour12 >= 0 && hour12 <=9
	{
		"0%(hour12)"
	}
	else
	{
		"%(hour12)"
	}
}

Getnowday
{
	if day == 1 || day == 21 || day == 31
	{
	"%(day)st"
	}
	elseif day == 2 || day == 22
	{
	"%(day)nd"
	}
	elseif day == 3 || day == 23
	{
	"%(day)rd"
	}
	else
	{
	"%(day)th"
	}
}

Getnowmonth
{
	if month == 1
	{"Morning Star"}
	elseif month == 2
	{"Sun's Dawn"}
	elseif month == 3
	{"First Seed"}
	elseif month == 4
	{"Rain's Hand"}
	elseif month == 5
	{"Second Seed"}
	elseif month == 6
	{"Midyear"}
	elseif month == 7
	{"Sun's Height"}
	elseif month == 8
	{"Last Seed"}
	elseif month == 9
	{"Heart Fire"}
	elseif month == 10
	{"Frostfall"}
	elseif month == 11
	{"Sun's Dusk"}
	else
	{"Evening Star"}
}

