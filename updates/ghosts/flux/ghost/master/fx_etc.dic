		LOGGING("To delete: %(_dir)%(_file)")
		_enum = FENUM("%(_dir)%(_file)","|")
		LOGGING("FENUM: %(_enum)")
		if _enum != ""
		{
			LOGGING("Using RMDIREX")
			_del = RMDIREX("%(_dir)%(_file)")
			LOGGING(_del)
			if _del == 0; {_error = "Can't delete directory %(_dir)%(_file) with RMDIREX"; break}
		}
		else
		{
