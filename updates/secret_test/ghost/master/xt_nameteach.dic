//I put anything related to who the user is in here. Name, pronouns, birthday.

OnChangeName
{
	"\0\s[0]\![set,balloontimeout,-1]Ok,\w4 what should I call you?\![open,inputbox,OnNameTeach,-1]"
}

OnNameTeach
{
	tempname = reference0 //this stores the original name in tempname
	reference0 = TOLOWER(reference0) //changes it to lowercase
	reference0 = REPLACE(reference0," ","") //removes spaces
	reference0 = REPLACE(reference0,".","") //removes periods
	reference0 = REPLACE(reference0,"-","") //removes dashes
	
	if tempname == username && booting != 1 //If the user gives the exact same name as before. The booting check has to be there in case they put in 'user'
	{
		"\0\s[0]Oh,\w4 did you change your mind?\x"
		--
		OnConfigMenu
	}
	elseif "template" _in_ reference0 || tempname == "X." || tempname == "x." //Checking with tempname because 'X.' has a period, which would be removed. I don't want to stop someone putting in just X
	{
		"\0\s[0]That's my name!\w8\w8 I can't call you that!\w8\w8 Try again.\![open,inputbox,OnNameTeach,-1]\e"
	}
	elseif reference0 == "" //If the user doesn't put in anything
	{
		username = "User"
		
		"\0\s[0]Oh,\w4 ok,\w4 I'll just call you User,\w4 then.\w8\w8 Let me know if you want to change it!"
	}
	else //if it's none of these above names, we can use it. You can add names that just have comments and can still be used, just don't add a \e at the end.
	{
		username = tempname
		"\0\s[0]Ok,\w4 I'll call you %(username) then."
	}
	--
	if booting == 0 //If the user was changing their name through the config menu
	{
		"\x"
		--
		OnConfigMenu
	}
	else //This is continuing from FirstBoot
	{
		"\w8\w8 Good to meet you!\w8\w8 And how should I refer to you?\n\n"
		--
		"\![*]\q[He/Him/His,OnPronouns,masc]\n/
		\![*]\q[She/Her/Hers,OnPronouns,fem]\n/	
		\![*]\q[They/Them/Their,OnPronouns,undef]\e"
	}
}

OnChangePronoun //Envelope names are the same as the GT template, since I figured most people will be used to them.
{
	"\0\s[0]How should I refer to you?"
	--
	"\n\n\_q/
	\![*]\q[He/Him/His,OnPronouns,masc]\n/
	\![*]\q[She/Her/Hers,OnPronouns,fem]\n/	
	\![*]\q[They/Them/Their,OnPronouns,undef]\e"
}


OnPronouns
{
	if reference0 == "masc"
	{
		heshe = "he"
		himher = "him"
		hisher = "his"
		hesshes = "he's"
	}
	elseif reference0 == "fem"
	{
		heshe = "she"
		himher = "her"
		hisher = "her"
		hesshes = "she's"
	}
	else
	{
		heshe = "they"
		himher = "them"
		hisher = "their"
		hesshes = "they're"
		
	}
	--
	if booting == 1 //This is the end of the firstboot dialogue
	{
		booting = 0
		"Sounds good!\w8\w8 To access the test variable or the to-do list,\w4 you can open script input with ctrl + s and type \%\(debug = 1)\w8\w8\n\nYou can also check if there's a newer version of the template!\w8\w8 Have fun!\![leave,passivemode]\e"
	}
	else //This is if the user is changing their pronouns through the menu
	{
		"\0\s[0]Ok,\w4 I'll use %(heshe) %(himher) and %(hisher).\x"
		--
		OnConfigMenu
	}
}
