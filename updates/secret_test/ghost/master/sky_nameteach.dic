OnSelectGender
{
	"\b2\![quicksection,true]%(race)\n\n"
	--
	"\![*]\q[Man,choosemale]\n/
	\![*]\q[Woman,choosefemale]\n/
	\![*]\q[Person,chooseniether]"
}

Select.choosemale
{
	presuffix = "masculine"
	himher = "him"
	heshe = "he"
	hisher = "his"
	gender = "man"
	--
	OnSelectName
}

Select.choosefemale
{
	presuffix = "feminine"
	himher = "her"
	heshe = "she"
	hisher = "her"
	gender = "woman"
	--
	OnSelectName
}

Select.chooseniether
{
	presuffix = "undefine"
	himher = "them"
	heshe = "they"
	hisher = "their"
	gender = "person"
	--
	OnSelectName
}

OnSelectName
{
	"\b2\![quicksection,true]%(race) %(gender)\n\n(Named...)\![open,inputbox,OnNameTeach,-1]"
}

